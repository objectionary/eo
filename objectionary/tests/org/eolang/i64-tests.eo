# Test.
[] > i64-has-valid-bytes
  eq. > @
    42.as-i64.as-bytes
    00-00-00-00-00-00-00-2A

# Test.
[] > i64-as-bytes-is-not-equal-to-number-bytes
  not. > @
    eq.
      i64 234.as-bytes
      234.as-i64.as-bytes

# Test.
[] > i64-to-i32-and-back
  eq. > @
    234.as-i64
    234.as-i64.as-i32.as-i64

# Test.
[] > negative-i64-to-i32-and-back
  eq. > @
    -234.as-i64
    -234.as-i64.as-i32.as-i64

# Test.
3147483647.as-i64.as-i32 > [] > throws-on-converting-to-i32-if-out-of-bounds

# Test.
[] > i64-less-true
  lt. > @
    10.as-i64
    50.as-i64

# Test.
[] > i64-less-equal
  not. > @
    lt.
      10.as-i64
      10.as-i64

# Test.
[] > i64-less-false
  not. > @
    lt.
      10.as-i64
      -5.as-i64

# Test.
[] > i64-greater-true
  gt. > @
    -200.as-i64
    -1000.as-i64

# Test.
[] > i64-greater-false
  not. > @
    gt.
      0.as-i64
      100.as-i64

# Test.
[] > i64-greater-equal
  not. > @
    gt.
      0.as-i64
      0.as-i64

# Test.
[] > i64-lte-true
  lte. > @
    -200.as-i64
    -100.as-i64

# Test.
[] > i64-lte-equal
  lte. > @
    50.as-i64
    50.as-i64

# Test.
[] > i64-lte-false
  not. > @
    lte.
      0.as-i64
      -10.as-i64

# Test.
[] > i64-gte-true
  gte. > @
    -1000.as-i64
    -1100.as-i64

# Test.
[] > i64-gte-equal
  gte. > @
    113.as-i64
    113.as-i64

# Test.
[] > i64-gte-false
  not. > @
    gte.
      0.as-i64
      10.as-i64

# Test.
[] > i64-zero-eq-to-i64-zero
  eq. > @
    0.as-i64
    0.as-i64

# Test.
[] > i64-eq-true
  eq. > @
    123.as-i64
    123.as-i64

# Test.
[] > i64-eq-false
  not. > @
    eq.
      123.as-i64
      42.as-i64

# Test
[] > i64-one-plus-i64-one
  eq. > @
    1.as-i64.plus 1.as-i64
    2.as-i64

# Test
[] > i64-one-minus-i64-one
  eq. > @
    1.as-i64.minus 1.as-i64
    0.as-i64

# Test.
2.as-i64.div 0.as-i64 > [] > throws-on-division-i64-by-i64-zero

# Checks that division by one returns the dividend.
[] > i64-div-by-i64-one
  -235.as-i64 > dividend
  eq. > @
    dividend.div 1.as-i64
    dividend

# Checks div with remainder
[] > i64-div-with-remainder
  eq. > @
    13.as-i64.div -5.as-i64
    -2.as-i64

# Test.
[] > i64-div-less-than-i64-one
  lt. > @
    1.as-i64.div 5.as-i64
    1.as-i64

# Test.
[] > i64-multiply-by-zero
  eq. > @
    1000.as-i64.times 0.as-i64
    0.as-i64
