+alias org.eolang.math.pi
+alias org.eolang.math.angle
+architect yegor256@gmail.com
+home https://github.com/objectionary/eo
+tests
+package org.eolang.math
+version 0.41.0

# Test.
[] > sin-zero
  eq. > @
    (angle 0).sin
    0

# Test.
[] > sin-pi-div-2
  eq. > @
    (angle (pi.div 2)).sin
    1

# Test.
[] > sin-pi-floored
  eq. > @
    (angle pi).sin.floor
    0

# Test.
[] > cos-zero
  eq. > @
    (angle 0).cos
    1

# Test.
[] > cos-pi-div-2-floored
  eq. > @
    (angle (pi.div 2)).cos.floor
    0

# Test.
[] > cos-pi
  eq. > @
    (angle pi).cos
    -1
