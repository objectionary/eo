+alias org.eolang.io.stdout
+architect yegor256@gmail.com
+home https://github.com/objectionary/eo
+tests
+package org.eolang
+version 0.37.0

# Test.
[] > goto-jumps-backwards
  eq. > @
    malloc.of
      8
      [i]
        seq > @
          *
            i.put 1
            go.to
              [g]
                seq > @
                  *
                    i.put (i.as-int.plus 1)
                    if.
                      i.as-int.lt 10
                      g.backward
                      true
            stdout "Finished!\n"
    10

# Test.
[] > goto-jumps-forward
  # Div.
  [x] > div
    malloc.for > @
      0
      [r]
        go.to > @
          [g]
            seq > @
              *
                if.
                  x.eq 0
                  g.forward true
                  true
                r.put (42.div x)
  and. > @
    eq.
      div 7
      6
    eq.
      div 0
      0

# Test.
[] > returns-from-method-body
  # Max.
  [a b] > max
    go.to > @
      [g]
        seq > @
          *
            if.
              a.gt b
              g.forward a
              true
            b
  eq. > @
    max 7 42
    42

# Test.
[] > nested-goto
  eq. > @
    go.to
      [g1]
        seq > @
          *
            go.to
              g1.forward 42 > [g2]
            7
    42
