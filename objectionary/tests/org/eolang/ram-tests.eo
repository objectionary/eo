+package org.eolang
+home https://github.com/objectionary/eo
+version 0.23.14
+alias org.eolang.ram
+alias org.eolang.hamcrest.assert-that
+junit

[] > writes-into-ram-and-reads-from-ram
  ram 10 > r
  r.write 0 65-66-67-68-69 > w
  r.read 0 5 > data
  assert-that > @
    and.
      eq.
        w
        TRUE
      eq.
        data
        65-66-67-68-69
    $.equal-to TRUE

[] > writes-at-random-position
  ram 1024 > r
  r.write 512 65-66-67-68-69 > w
  r.read 513 4 > data
  assert-that > @
    and.
      eq.
        w
        TRUE
      eq.
        data
        66-67-68-69
    $.equal-to TRUE

[] > writes-integer-to-ram
  ram 1024 > r
  3.as-bytes > b
  r.write 0 b > w
  assert-that > @
    and.
      w.eq TRUE
      (r.read 0 8).as-int.eq 3
    $.equal-to TRUE
