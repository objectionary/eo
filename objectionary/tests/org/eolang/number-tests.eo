# Test.
[] > calculates-fibonacci-number-with-recursion
  # Fibonacci.
  [n] > fibo
    if. > @
      n.lt 3
      1
      plus.
        fibo (n.minus 1)
        fibo (n.minus 2)
  eq. > @
    fibo 4
    3

# Test.
[] > calculates-fibonacci-number-with-tail
  eq. > @
    fibonacci 4
    3

  # Fibonacci.
  [n] > fibonacci
    if. > @
      n.lt 3
      small n
      rec n 1 1

    # Small.
    [n] > small
      if. > @
        n.eq 2
        1
        n

    # Recursive.
    [n minus1 minus2] > rec
      if. > @
        n.eq 3
        minus1.plus minus2
        rec (n.minus 1) (minus1.plus minus2) minus1

