+package org.eolang
+rt jvm org.eolang:eo-runtime:0.0.0

[] > float
  # Tests that $ = x
  [x] > eq
    eq. > @
      ^.as-bytes
      x.as-bytes

  # Tests that $ ≠ x
  [x] > neq
    (^.eq x).not > @

  # Tests that $ < x
  [x] > less
    and. > @
      (^.eq x).not
      (^.greater x).not

  # Tests that $ ≤ x
  [x] > leq
    or. > @
      ^.eq x
      ^.less x

  # Tests that $ > x
  [x] > greater /bool

  # Tests that $ ≥ x
  [x] > geq
    or. > @
      ^.eq x
      ^.greater x

  # Multiplication of $ and x
  [x] > mul /float

  # Sum of $ and x
  [x] > add /float

  # Negation of $
  [] > neg
    ^.mul -1.0 > @

  # Sign of $ (-1.0, 0.0, or 1.0)
  [] > signum
    if. > @
      ^.less 0.0
      -1.0
      if.
        ^.eq 0.0
        0.0
        1.0

  # Difference between $ and x
  [x] > sub
    ^.add (x.neg) > @

  # x'th power of $
  [x] > pow /float

  # Quotient of the division of $ by x
  [x] > div
    ^.mul (x.pow -1.0) > @

  # Absolute value of $ (i.e., with no sign)
  [] > abs
    if. > @
      ^.geq 0.0
      ^
      ^.neg

  # Converts this to bytes
  [] > as-bytes /bytes

  # Converts this to int
  [] > as-int /int

  # Converts this to string
  [] > as-string /string
