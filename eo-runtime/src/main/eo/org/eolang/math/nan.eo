+package org.eolang.math
+rt jvm org.eolang:eo-runtime:0.0.0

# Not a number
[] > nan
  # Tests that $ = x
  [x] > eq
    FALSE > @

  # Tests that $ â‰  x
  [x] > neq
    TRUE > @

  # Tests that $ < x
  [x] > less
    FALSE > @

  # Tests that $ â‰¤ x
  [x] > leq
    FALSE > @

  # Tests that $ > x
  [x] > greater
    FALSE > @

  # Tests that $ â‰¥ x
  [x] > geq
    FALSE > @

  # Multiplication of $ and x
  [x] > mul
    [] > @
      "You can't manipulate with NaN" > msg

  # Sum of $ and x
  [x] > add
    [] > @
      "You can't manipulate with NaN" > msg

  # Negation of $
  [] > neg
    [] > @
      "You can't manipulate with NaN" > msg

  # Sign of $ (-1.0, 0.0, or 1.0)
  [] > signum
    [] > @
      "You can't manipulate with NaN" > msg

  # Difference between $ and x
  [x] > sub
    [] > @
      "You can't manipulate with NaN" > msg

  # x'th power of $
  [x] > pow
    [] > @
      "You can't manipulate with NaN" > msg

  # Quotient of the division of $ by x
  [x] > div
    [] > @
      "You can't manipulate with NaN" > msg

  # Absolute value of $ (i.e., with no sign)
  [] > abs
    [] > @
      "You can't manipulate with NaN" > msg

  # Converts this to bytes
  [] > as-bytes
    7F-C0-00-00 > @

  # Converts this to int
  [] > as-int
    [] > @
      "You can't convert NaN to int" > msg

  # Converts this to string
  [] > as-string
    "NaN" > @
