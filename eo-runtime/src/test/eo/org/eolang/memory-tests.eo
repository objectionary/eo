+alias org.eolang.hamcrest.assert-that
+alias org.eolang.io.stdout
+alias org.eolang.txt.sprintf
+home https://github.com/objectionary/eo
+junit
+package org.eolang
+version 0.0.0

[] > writes-into-memory
  memory 0 > x
  assert-that > @
    seq
      x.write 10
      x
    $.equal-to 10

[] > double-writes
  memory 0 > m
  assert-that > @
    seq
      m.write "Hello, world!"
      m.write 42
      m
    $.equal-to 42

[] > rewrites-and-increments-itself
  memory 0 > m
  assert-that > @
    seq
      m.write 1
      m.write (m.plus 5)
      m
    $.equal-to 6

[] > memory-in-outer-scope
  [] > outer
    memory 0 > x
  outer > a
  seq > @
    a.x.write 1
    stdout
      sprintf
        "%d"
        a.x

[] > writes-into-two-memory-objects
  memory 0 > a
  memory 0 > b
  assert-that > @
    and.
      seq
        a.write 10
        b.write 20
      a.eq 10
    $.equal-to TRUE

[] > writes-into-two-memory-objects-and-check-first
  memory 0 > a
  memory 0 > b
  assert-that > @
    seq
      a.write 10
      b.write 20
      a
    $.equal-to 10
