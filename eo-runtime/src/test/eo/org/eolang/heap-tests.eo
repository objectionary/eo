+home https://github.com/objectionary/eo
+tests
+package org.eolang
+version 0.0.0

# Test.
[] > allocates-and-uses
  "Hello, друг!" > txt
  txt.as-bytes > bytes
  heap 1024 > h
  h.pointer 0 1 > p
  p.block > data
    bytes.size
    [b] (b.as-string > @)
  eq. > @
    seq
      *
        data.write bytes
        data
    txt

# Test.
[] > malloc-returns-different-pointers
  heap 1024 > h!
  h.malloc 64 > p1!
  h.malloc 32 > p2!
  not. > @
    eq.
      p1
      p2

# Test.
[] > mallocs-do-not-overlap
  heap 1024 > h!
  h.malloc 64 > p1!
  h.malloc 32 > p2!
  eq. > @
    or.
      p2.gte
        p1.plus 64
      p2.lte
        p1.minus 32
    TRUE

# Test.
[] > malloc-return-error
  heap 2 > h!
  eq. > @
    try
      []
        h.malloc > @
          10
      [e]
        e > @
      nop
    "Allocation failed: bad alloc (not enough memory in the heap)"

# Test.
[] > write-and-read-without-error
  heap 1024 > h
  h.pointer 0 8 > p
  # Mem.
  [] > mem
    p.block 8 > @
  eq. > @
    mem.write 01-02-03
    TRUE

# Test.
[] > increments-pointer
  heap 1024 > h
  h.pointer 0 2 > p1
  p1.add 2 > p2
  p2.sub 1 > p3
  eq. > @
    and.
      and.
        (p1.block 6).write "HELLO!".as-bytes
        eq.
          p2.block
            2
            [b] (b.as-string > @)
          "O!"
      eq.
        p3.block
          2
          [b] (b.as-string > @)
        "LL"
    TRUE
