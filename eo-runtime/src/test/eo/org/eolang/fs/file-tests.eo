# This unit test is supposed to check the functionality of the corresponding object.
[] > reads-from-file
  malloc
  .of
    12
    [m]
      seq > @
        *
          tmpdir
          .tmpfile
          .open
            "w"
            f.write "Hello, world" > [f]
          .open
            "r"
            [f] >>
              m.put > @
                f.read 12
          m
  .eq "Hello, world" > @

