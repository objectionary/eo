+package org.eolang
+junit

[] > takes-part-of-bytes
  eq. > @
    part.
      20-1F-EE-B5-90
      1
      3
    1F-EE-B5

[] > size-of-part-is-correct
  eq. > @
    size.
      part.
        20-1F-EE-B5-90-EE-BB
        2
        3
    3

[] > counts-size-of-bytes
  eq. > @
    size.
      F1-20-5F-EC-B5-90-32
    7

[] > turns-bytes-into-a-string
  eq. > @
    as-string.
      E4-BD-A0-E5-A5-BD-2C-20-D0-B4-D1-80-D1-83-D0-B3-21
    "你好, друг!"
