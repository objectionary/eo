# Test.
[] > multi-layer-volatility
  memory 0 > ma
  cage a > ca
  # Layer A.
  [] > a
    # Layer A.phi.
    [] > @
      # Layer A.phi.phi.
      [] > @
        # Layer A.phi.phi.phi.
        [] > @
          seq > @
            *
              ma.write (ma.as-int.plus 1)
              ma.as-int
  memory 0 > mb
  cage b > cb
  # Layer B.
  [] > b
    # Layer B.phi.
    [] > @
      # Layer B.phi.phi.
      [] > @
        # Layer B.phi.phi.phi.
        [] > @
          seq > z
            *
              mb.write (mb.as-int.plus 1)
              mb.as-int
  eq. > @
    seq
      *
        ca
        ca.plus 40
    seq
      *
        cb.z
        cb.z.plus 40

# Test.
[] > infinite-loop-check
  # Recursive sum object.
  [value] > pyint
    # Add.
    [y] > add
      pyint (^.value.plus y.value) > @
  cage pyint > x
  cage > tmp
    x.add
  eq. > @
    seq
      *
        x.write
          pyint 0
        tmp.write
          x.add (pyint 1)
        QQ.io.stdout
          tmp.value
        tmp.value
    1

