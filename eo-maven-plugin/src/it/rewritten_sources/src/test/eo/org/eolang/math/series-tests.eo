+alias org.eolang.math.series
+alias org.eolang.hamcrest.assert-that
+home https://github.com/objectionary/eo-math
+package org.eolang.math
+tests
+version 0.0.0

[] > max-of-empty-array
  assert-that > @
    try
      []
        (series *).max > @
      [e]
        e > @
      nop
    $.equal-to "Can't get max of empty array"

[] > min-of-empty-array
  assert-that > @
    try
      []
        (series *).min > @
      [e]
        e > @
      nop
    $.equal-to "Can't get min of empty array"

[] > max-of-one-item-array
  * > xs
    42
  assert-that > @
    series xs
    .max
    $.equal-to 42

[] > min-of-one-item-array
  * > xs
    42
  assert-that > @
    series xs
    .min
    $.equal-to 42

[] > max-of-array-is-first
  * > xs
    25
    12
    -2
  assert-that > @
    series xs
    .max
    $.equal-to 25

[] > max-of-array-is-in-the-center
  * > xs
    12
    25
    -2
  assert-that > @
    series xs
    .max
    $.equal-to 25

[] > max-of-array-is-last
  * > xs
    -2
    5
    22
  assert-that > @
    series xs
    .max
    $.equal-to 22

[] > min-of-array-is-first
  * > xs
    4
    12
    10
  assert-that > @
    series xs
    .min
    $.equal-to 4

[] > min-of-array-is-in-the-center
  * > xs
    24
    3
    10
  assert-that > @
    series xs
    .min
    $.equal-to 3

[] > min-of-array-is-last
  * > xs
    12
    5
    2
  assert-that > @
    series xs
    .min
    $.equal-to 2
